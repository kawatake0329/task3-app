<div class="container">
  <%= render 'new', user: @user, book: @book %>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class = "table">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@user) do %>
                <%= image_tag @user.get_profile_image(200,200) %></br>
                <%= @books.user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path do %>
                <%= @books.title %>
              <% end %>
            </td>
            <td>
              <%= @books.body %>
            </td>
            <td>

            </td>
            <td>
              <% if @user == current_user %>
                <%= link_to "Edit", edit_book_path(@books), class: "btn btn-sm btn-success destroy_book_id" %>
              <% end %>
            </td>
            <td>
              <% if @user == current_user %>
                <%= link_to "Destroy", book_path(@books.id), method: :delete, class: "btn btn-sm btn-danger destroy_book_id" %>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>